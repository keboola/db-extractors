{
    "name": "keboola/db-extractor-oracle",
    "license": "MIT",
    "type": "project",
    "description": "Reads data from Oracle databases for keboola connection",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-filter": "*",
        "ext-json": "*",
        "keboola/db-extractor-common": "^13.2.3",
        "keboola/db-extractor-config": "^1.3.6",
        "keboola/db-extractor-table-format": "^3.1.0",
        "keboola/php-component": "^8.1.2",
        "symfony/config": "^5.0",
        "symfony/process": "^5.0"
    },
    "require-dev": {
        "keboola/coding-standard": ">=9.0.0",
        "phpstan/phpstan": "^0.12.14",
        "phpunit/phpunit": "^9.0",
        "ext-oci8": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\DbExtractor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbExtractor\\Tests\\": "tests/phpunit/"
        }
    },
    "scripts": {
        "tests": "./wait-for-it.sh oracle:8080 -t 120 -- phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
