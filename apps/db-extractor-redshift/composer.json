{
    "name": "keboola/db-extractor-redshift",
    "license": "MIT",
    "type": "project",
    "description": "Keboola Redshift Extractor",
    "authors": [
        {
            "name": "Keboola Devel",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "keboola/db-extractor-common": "^9.2"
    },
    "require-dev": {
        "ext-pdo_pgsql": "*",
        "aws/aws-sdk-php": "^3.18",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "keboola/coding-standard": ">=8.0",
        "phpstan/phpstan-shim": "^0.11.4",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbExtractor\\Tests\\": "tests/Keboola/DbExtractor"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max -c phpstan.neon src tests",
        "phpcs": "phpcs --extensions=php src tests",
        "phpcbf": "phpcbf --extensions=php src tests",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
