{
    "name": "keboola/db-extractor-pgsql",
    "license": "MIT",
    "type": "Application",
    "description": "Reads data from Postgres databases for keboola connection",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "keboola/db-extractor-common": "^9.3"
    },
    "require-dev": {
        "keboola/coding-standard": "^8.0",
        "phpstan/phpstan": "^0.8",
        "phpunit/phpunit": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbExtractor\\Tests\\": "tests/Keboola/Extractor"
        }
    },
    "scripts": {
        "tests": "./wait-for-it.sh pgsql:5432 -t 30 -- ./vendor/bin/phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
