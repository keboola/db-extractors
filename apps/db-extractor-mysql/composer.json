{
    "name": "keboola/db-extractor-mysql",
    "license": "MIT",
    "type": "project",
    "description": "Reads data from Mysql databases for keboola connection",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "keboola/db-extractor-common": "^13.3",
        "keboola/db-extractor-config": "^1.4",
        "keboola/db-extractor-table-format": "^3.1.1",
        "keboola/php-component": "^8.1.2",
        "keboola/php-datatypes": "^4.7",
        "keboola/php-temp": "^2.0",
        "keboola/php-utils": "^4.1",
        "symfony/config": "^5.0"
    },
    "require-dev": {
        "keboola/coding-standard": ">=9.0.0",
        "phpstan/phpstan": "^0.12.14",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbExtractor\\Tests\\": "tests/Keboola/DbExtractor"
        }
    },
    "scripts": {
        "tests": "./wait-for-it.sh mysql:$MYSQL_DB_PORT -t 30 -- ./vendor/bin/phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
