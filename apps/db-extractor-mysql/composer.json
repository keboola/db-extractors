{
    "name": "keboola/db-extractor-mysql",
    "license": "MIT",
    "type": "project",
    "description": "Reads data from Mysql databases for keboola connection",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../../libs/*"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "keboola/db-extractors-db-extractor-adapter": "*@dev",
        "keboola/db-extractors-db-extractor-common": "*@dev",
        "keboola/db-extractors-db-extractor-config": "*@dev",
        "keboola/db-extractors-db-extractor-ssh-tunnel": "*@dev",
        "keboola/db-extractors-db-extractor-table-format": "*@dev",
        "keboola/php-component": "^9.4",
        "keboola/php-datatypes": "^7.2",
        "keboola/php-temp": "^2.0",
        "keboola/php-utils": "^4.1",
        "symfony/config": "^6.3"
    },
    "require-dev": {
        "keboola/coding-standard": ">=9.0.0",
        "keboola/datadir-tests": "^5.6",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbExtractor\\FunctionalTests\\": "tests/functional",
            "Keboola\\DbExtractor\\TraitTests\\": "tests/traits/",
            "Keboola\\DbExtractor\\Tests\\": "tests/phpunit"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit --testsuite unit",
        "tests-datadir": "phpunit --testsuite functional",
        "tests-perf": "phpunit --testsuite perf",
        "tests": [
            "@tests-phpunit",
            "@tests-datadir",
            "@tests-perf"
        ],
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
