{
  "name": "keboola/db-extractor-common",
  "license": "MIT",
  "type": "library",
  "description": "Common library from Keboola Database Extractors",
  "authors": [
    {
      "name": "keboola",
      "email": "devel@keboola.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-pdo": "*",
    "keboola/csv": "^1.1",
    "keboola/php-datatypes": "^4.0",
    "pimple/pimple": "^3.0",
    "monolog/monolog": "^1.17",
    "symfony/config": "^3.0",
    "symfony/yaml": "^3.0",
    "keboola/ssh-tunnel": "^2.0",
    "keboola/php-utils": "^2.3",
    "nette/utils": "^2.4",
    "vkartaviy/retry": "^0.2",
    "symfony/serializer": "^3.1"
  },
  "require-dev": {
    "aws/aws-sdk-php": "^3.67",
    "phpunit/phpunit": "^7.0",
    "keboola/coding-standard": "^2.0",
    "symfony/finder": "*",
    "phpstan/phpstan": "^0.8"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\": "src/Keboola/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Keboola\\DbExtractor\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": "./wait-for-it.sh mysql:3306 -t 30 -- ./vendor/bin/phpunit",
    "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests -c phpstan.neon",
    "phpcs": "phpcs -n --ignore=vendor,TaintedPDO.php,TaintedPDOStatement.php --extensions=php .",
    "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
    "build": [
      "@phpcs",
      "@phpstan",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-all --strict",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
