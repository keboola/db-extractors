{
  "name": "keboola/db-extractor-common",
  "license": "MIT",
  "type": "library",
  "description": "Common library from Keboola Database Extractors",
  "authors": [
    {
      "name": "keboola",
      "email": "devel@keboola.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "keboola/csv": "^1.1",
    "keboola/php-datatypes": "^3.2",
    "pimple/pimple": "^3.2",
    "monolog/monolog": "^1.23",
    "symfony/process": "^4.1",
    "symfony/config": "^4.1",
    "symfony/yaml": "^4.1",
    "keboola/ssh-tunnel": "^2.0",
    "keboola/php-utils": "^2.3",
    "nette/utils": "^2.5",
    "vkartaviy/retry": "^0.2",
    "symfony/serializer": "^4.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.3",
    "keboola/coding-standard": "^2.0",
    "symfony/finder": "*",
    "phpstan/phpstan": "^0.8"
  },
  "autoload": {
    "psr-4": {
      "Keboola\\": "src/Keboola/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Keboola\\DbExtractor\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "old-tests": "phpunit tests/Old",
    "tests": [
      "@old-tests"
    ],
    "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests -c phpstan.neon",
    "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
    "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
    "build": [
      "@phpcs",
      "@phpstan",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-all --strict",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true
  }
}
