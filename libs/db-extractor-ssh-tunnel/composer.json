{
    "name": "keboola/db-extractor-ssh-tunnel",
    "description": "Create SSH tunnel for DB Extractors",
    "type": "library",
    "license": "MIT",
    "require": {
        "keboola/retry": "^0.5",
        "keboola/ssh-tunnel": "^2.0.3",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "keboola/coding-standard": ">=9.0.0",
        "phpstan/phpstan": "^0.12.14",
        "phpunit/phpunit": "^9.1",
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\DbExtractorSSHTunnel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbExtractorSSHTunnel\\Test\\": "tests/"
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests",
        "phpcs": "phpcs -n -s --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer install",
            "@composer validate --no-check-all --strict",
            "@tests"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
