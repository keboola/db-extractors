{
    "name": "keboola/db-extractor-config",
    "description": "Config definition for database extractor",
    "type": "library",
    "license": "MIT",
    "require": {
        "symfony/config": "^3.0",
        "symfony/yaml": "^3.0"
    },
    "require-dev": {
        "keboola/coding-standard": "^2.0",
        "phpstan/phpstan": "^0.8",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\DbExtractorConfig\\": "src/"
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max ./src ./tests",
        "phpcs": "phpcs -n -s --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "build": [
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer install",
            "@composer validate --no-check-all --strict",
            "@tests"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
